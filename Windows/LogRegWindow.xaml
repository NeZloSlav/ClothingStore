<Window x:Class="ClothingStore.Windows.LogRegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothingStore.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="LogRegWindow"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Height="600" 
        Width="800">
    <Grid>
        <Frame x:Name="frmLogReg" NavigationUIVisibility="Hidden" Panel.ZIndex="0" Margin="-4,-10,4,10" />

        <Button x:Name="btnClose" 
                Content="×"
                Style="{StaticResource logReverseEnterButtonStyle}"
                Panel.ZIndex="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Padding="0 -5 0 0"
                Width="30"
                Height="30"
                Margin="20"
                Click="btnClose_Click"/>

    </Grid> 
</Window>
